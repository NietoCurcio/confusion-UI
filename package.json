{
  "name": "confusion",
  "version": "1.0.0",
  "description": "This is a website for Ristorante Con Fusion",
  "main": "index.html",
  "scripts": {
    "start": "npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lite": "lite-server",
    "sass": "sass --watch src/sass:src/css",
    "dev": "concurrently \"npm run sass\" \"npm run lite\"",
    "clean": "rimraf dist",
    "imagemin": "imagemin src/img/* -o dist/img",
    "minifyhtml": "html-minifier -c config-html-minifier.json --input-dir ./src --output-dir dist --file-ext html",
    "minifycss": "node build-clean-css.js",
    "minifyjs": "node build-terser.js",
    "build": "npm run clean & npm run imagemin & npm run minifyhtml & npm run minifycss & npm run minifyjs"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "clean-css": "^5.1.3",
    "concurrently": "^6.2.0",
    "lite-server": "^2.3.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "bootstrap": "^5.0.1",
    "terser": "^5.7.1"
  }
}
